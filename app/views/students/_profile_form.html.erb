<%= form_for(@student) do |form| %>
	<% if @student.errors.any? %>
		<div class="error_explanation alert alert-danger">
			<h2><%= pluralize(@student.errors.count, "error") %> occurred:</h2>

			<ul>
				<% @student.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
			<div class="input-group name">
		    	<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
		    	<%= form.text_field :name, class: "form-control", :placeholder => "User name"%>
			</div><br/>

			<div class="email input-group">
				<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
				<%= form.email_field :email, class: "form-control", placeholder: "Email" %>
			</div><br/>

			<div class="input-group password">
				<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
				<%= form.password_field :password, class: "form-control", placeholder: "Password" %>
			</div><br/>

			<div class="input-group password">
				<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
				<%= form.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
			</div><br/>

			<div class="input-group contact_name">
		    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
		    <%= form.text_field :contact_name, class: "form-control", :placeholder => "Contact Person"%>
			</div><br/>

			<div class="input-group mobile_no">
				<span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
				<%= form.telephone_field :mobile_no, class: "form-control", :placeholder => "Contact Person Tel No"%>
			</div><br/>

			<div class="input-group relation">
		    <span class="input-group-addon glyphicon-rel"><i class="glyphicon glyphicon-user"></i></span>
		    <%= form.select :relation, Student.relations.keys, class: "form-control select", prompt: "Relationship with student"%>
			</div><br/>

			<div class="input-group district">
				<span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
				<%= form.select :district, Student.districts.keys, class: "form-control",
					prompt: "Residence District" %>
			</div><br/>

			<div class="input-group address">
				<span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
				<%= form.text_field :address, class: "form-control", :placeholder => "Residence Address" %>
			</div><br/>


			<p class="submit">
				<%= form.submit "Update", class: "btn btn-warning" %>
			</p>
	</div>
<% end %>